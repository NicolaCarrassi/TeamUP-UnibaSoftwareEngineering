a, a:hover, a:focus {
    color: inherit;
    text-decoration: none;
    transition: all 0.3s;
}

i, span {
    display: inline-block;
}

.wrapper {
    display: flex;
    align-items: stretch;
    margin-left: auto;
}

#rightsidebar {
    min-width: 270px;
    max-width: 270px;
    background: #353132;
    color: #fff;
    transition: all 0.3s;
}

#rightsidebar ul li a {
    text-align: left;
}

#rightsidebar .sidebar-header {
    padding: 20px;
    background: #2F2A29;
}

#sidebar .sidebar-header strong {
    display: none;
    font-size: 1.8em;
}

#rightsidebar ul.components {
    padding: 20px 0;
    border-bottom: 1px solid #353132;
}

#rightsidebar ul li a {
    padding: 10px;
    font-size: 1.1em;
    display: block;
}

#rightsidebar ul li a:hover {
    color: #353132;
    background: #fff;
}

#rightsidebar ul li a i {
    margin-right: auto;
}

#rightsidebar ul li.active > a, a[aria-expanded="true"] {
    color: #fff;
    background: #2F2A29;
}

a[data-toggle="collapse"] {
    position: relative;
}

ul ul a {
    font-size: 0.9em !important;
    padding-left: 30px !important;
    background: #2F2A29;
}

#content {
    padding: 0px;
    min-height: 100vh;
    transition: all 0.3s;
}

@media (max-width: 768px) {
    #rightsidebar {
        min-width: 80px;
        max-width: 80px;
        text-align: center;
        margin-left: -80px !important;
    }
}

@media (max-width: 768px) {
    #rightsidebar .rightsidebar-header h3, #sidebar .CTAs {
        display: none;
    }
}

@media (max-width: 768px) {
    #rightsidebar .rightsidebar-header strong {
        display: block;
    }
}

@media (max-width: 768px) {
    #rightsidebar ul li a {
        padding: 20px 10px;
    }
}

@media (max-width: 768px) {
    #rightsidebar ul li a i {
        margin-right: 0;
        display: block;
    }
}

@media (max-width: 768px) {
    #rightsidebar ul ul a {
        padding: 10px !important;
    }
}

@media (max-width: 768px) {
    #rightsidebar ul li a i {
        font-size: 1.3em;
    }
}

@media (max-width: 768px) {
    #rightsidebar {
        margin-left: 0;
    }
}

@media (max-width: 768px) {
    #sidebarCollapse span {
        display: none;
    }
}
